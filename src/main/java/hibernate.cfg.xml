<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC  
   "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
   "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">  

<hibernate-configuration>
    <session-factory>

        <!-- Correct MySQL 8 Driver -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <!-- Your database 'schema1' -->
        <property name="connection.url">jdbc:mysql://localhost:3306/schema1?useSSL=false&amp;serverTimezone=UTC</property>

        <!-- Add your MySQL password here -->
        <property name="connection.username">root</property>
        <property name="connection.password">sai585</property>

        <!-- Hibernate properties -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>

        <!-- Mapping -->
        <mapping resource="Emp.hbm.xml"/>

    </session-factory>
</hibernate-configuration>
